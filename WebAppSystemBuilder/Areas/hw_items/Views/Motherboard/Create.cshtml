@using WebAppSystemBuilder.DTO.Items.HWComponent.Mobo

@model MotherboardDTO

<h4>Add a new Motherboard (item) </h4>
<div>
    <form asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <br />
            <label asp-for="ChipsetId">Select Chipset</label>
            <select asp-for="ChipsetId" class="form-control" asp-items="ViewBag.Chipsets"></select>
            <br />
            <label asp-for="Description">Full Description (optional, detail view only)</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <input class="btn btn-success" type="submit" value="Create" />
        <input class="btn btn-danger" type="reset" value="Reset" />
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}