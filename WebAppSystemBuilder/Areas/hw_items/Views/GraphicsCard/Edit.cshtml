@using WebAppSystemBuilder.DTO.Items.HWComponent.GPU

@model GraphicsCardDTO

<h4>Update graphics card (item) definition</h4>
<div>
    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <br />
            <label asp-for="GPUBaseModelId">Select GPU on which it is based on</label>
            <select asp-for="GPUBaseModelId" class="form-control" asp-items="ViewBag.GraphicsBase"></select>
            <br />
            <label asp-for="Description">Full Description (optional, detail view only)</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div>
            <input class="btn btn-success" type="submit" value="Update" />
        </div>
    </form>
</div>
